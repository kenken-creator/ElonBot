<%@user_timeline.each do |tweet|%>
  <%= "#{tweet.user.name}" %>
  <p><%= tweet.text %></p>
  <% tweet.text.start_with?("RT") %>
    <div><%= "#{tweet.text} twitter.com/#{tweet.retweeted_status.user.screen_name}/status/#{tweet.retweeted_status.id}" %></div>
  <%elsif tweet.text.start_with?("@") %>
    <div><%="#{tweet.text.gsub(/@[a-z|A-Z|0-9|_]+/, "")} twitter.com/#{tweet.in_reply_to_screen_name}/status/#{tweet.in_reply_to_status_id}"%></div>
  <% else %>
    <div><%= "#{tweet.text} twitter.com/#{tweet.user.screen_name}/status/#{tweet.id}"%></div>
  <% end %>
<% end %>